{
  "name": "pentaforge",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP server for structured roundtable discussions to generate PRP-ready specifications",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "lint": "eslint . --ext .ts",
    "test": "jest",
    "docker:build": "docker build -t pentaforge:latest .",
    "docker:run": "docker run -i --rm -v $(pwd)/PRPs/inputs:/app/PRPs/inputs pentaforge:latest"
  },
  "keywords": [
    "mcp",
    "server",
    "roundtable",
    "prp",
    "agile",
    "specification"
  ],
  "author": "PentaForge Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.0",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "gray-matter": "^4.0.3",
    "markdown-it": "^13.0.2",
    "markdown-it-task-checkbox": "^1.0.6",
    "openai": "^4.67.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
